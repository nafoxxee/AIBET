# AIBET Analytics Platform v1.3 FULL - Environment Configuration
# Copy this file to .env and update values as needed

# Server Configuration
DEBUG=false
PORT=8000

# Service Toggles
ENABLE_NHL=true
ENABLE_KHL=true
ENABLE_CS2=true

# Cache TTL (seconds)
TTL_NHL=300
TTL_KHL=600
TTL_CS2=300
TTL_ODDS=180

# Cache Settings
CACHE_MAX_ITEMS=1000

# AI Settings
AI_EXPLAIN_MODE=true

# Optional: Telegram Bot Configuration (for future bot integration)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_ID=379036860
CS2_CHANNEL_ID=@aibetcsgo
KHL_CHANNEL_ID=@aibetkhl

# Optional: External Services
AIBET_WEB_URL=https://aibet-mini-app.onrender.com

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Database Configuration
DATABASE_PATH=database.db

# ML Configuration
ML_RETRAIN_INTERVAL=86400
ML_MIN_TRAINING_SAMPLES=100
ML_CONFIDENCE_THRESHOLD=0.6

# Scheduler Configuration (seconds)
CS2_CHECK_INTERVAL=300
KHL_CHECK_INTERVAL=300
HEARTBEAT_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
